<?xml version='1.0' encoding='UTF-8'?>
<odoo>
	<record id="view_account_export_arciba_form" model="ir.ui.view">
	    <field name="name">account.export.arciba.form</field>
	    <field name="model">account.export.arciba</field>
	    <field name="arch" type="xml">
	        <form>
	            <header>
	                <button name="compute_arciba_data" string="Regenerate ARCIBA" type="object"/>
	            </header>
	            <sheet>
	                <group>
	                    <group>
							<field name="doc_type" widget="radio"/>
	                        <field name="tag_tax"/>
	                        <field name="company_id" options="{'no_create': True, 'no_create_edit':True}"/>
	                    </group>
	                    <group>
	                        <field name="year" style="width: 30%" />
	                        <field name="month" style="width: 30%" />
	                    </group>
	                </group>
	                <group colspan="4">
	                    <span> Days of period
	                        <field name="date_from"/> <span> - </span> <field name="date_to"/>
	                    </span>
	                </group>

	                <group string="File and data">
	                    <field name="export_arciba_filename" invisible="1"/>
	                    <field name="export_arciba_file" readonly="1" filename="export_arciba_filename"/>
	                    <field name="export_arciba_data"/>
                        <field name="failed_invoice_ids" widget="many2many_tags" groups="base.group_no_one" readonly="1" />
                        <field name="failed_payment_ids" widget="many2many_tags" groups="base.group_no_one" readonly="1" />
	                </group>
	            </sheet>
	        </form>
	    </field>
	</record>

	<record id="view_account_export_arciba" model="ir.ui.view">
	    <field name="name">account.export.arciba.tree</field>
	    <field name="model">account.export.arciba</field>
	    <field name="arch" type="xml">
	        <tree>
	            <field name="export_arciba_filename"/>
	            <field name="company_id"/>
	            <field name="date_from"/>
	            <field name="date_to"/>
	            <field name="period"/>
	        </tree>
	    </field>
	</record>

	<record id="action_account_export_arciba" model="ir.actions.act_window">
	    <field name="name">Export ARCIBA</field>
	    <field name="res_model">account.export.arciba</field>
	    <field name="view_mode">tree,form</field>
	</record>

	<menuitem id="menu_account_export_arciba"
	          action="action_account_export_arciba"
	          parent="l10n_ar.account_reports_ar_statements_menu"
	          sequence="8"/>

</odoo>
